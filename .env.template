# Server Configuration
PORT=5001
SOCKET_PORT=5000
WINRM_PORT=5985
API_PORT=5002

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Security
# Generate a unique SECRET_KEY for each installation
# You can use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_generated_secret_key_here
JWT_EXPIRATION_SECONDS=3600
CACHE_EXPIRATION_SECONDS=60

# Authentication
# Change these default credentials for production use
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# WinRM Credentials
# Add your Windows Remote Management credentials
WINRM_HOST=your_winrm_host
WINRM_USERNAME=your_winrm_username
WINRM_PASSWORD=your_winrm_password

# Frontend Configuration
POLLING_INTERVAL=10000
MAX_RECONNECT_ATTEMPTS=5

# Server URL Configuration
# Change this to your server's public URL for production
API_HOST=localhost